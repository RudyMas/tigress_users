{% extends 'datatable.twig' %}
{% block js %}
    {{ parent() }}
    <script>
        let variables = {
            schrijfToegang: '{{ rights.write }}',
            verwijderToegang: '{{ rights.delete }}',
            toon: '{{ _GET.toon }}',
        }
    </script>
    <script src="{{ BASE_URL }}/vendor/olsc/gebruikers/public/javascript/gebruikers/index.js"></script>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row break-out">
            <div class="col-md-9">
                <h3>Gebruikersaccounts {% if toon == 'archief' %}(archief){% endif %}</h3>
            </div>
            <div class="col-md-3 text-end">
                {% if _GET.toon == 'archief' %}
                    <a href="{{ BASE_URL }}/gebruikers" class="btn btn-warning mb-1">Archief</a>
                {% else %}
                    <a href="{{ BASE_URL }}/gebruikers?toon=archief" class="btn btn-outline-warning mb-1">Archief</a>
                {% endif %}
                <a href="{{ BASE_URL }}/" class="btn btn-primary mb-1"><i class="fa fa-arrow-left"></i>
                    Terug</a>
            </div>
        </div>
        <div class="row break-out">
            <div class="col-md-12">
                <fieldset class="mt-3">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="w-100">
                                <b>School/Team:</b>
                                <select id="schoolTeamFilter" class="form-select">
                                    {{ filterOptiesTeams|raw }} ?>
                                </select>
                            </label>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="w-100">
                                <b>Recht:</b>
                                <select id="rechtFilter" class="form-select">
                                    <option value="">Allemaal</option>
                                </select>
                            </label>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="w-100">
                                <b>Fun & Eva:</b>
                                <select id="funEvaFilter" class="form-select">
                                    <option value="">Allemaal</option>
                                    <option value="Coach">Coach</option>
                                    <option value="Evaluator">Evaluator</option>
                                    <option value="Directie">Directie</option>
                                </select>
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="dataTableGebruikers"
                                       class="table table-striped table-bordered w-100"></table>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>

    <!-- Modal Dialog: Delete User -->
    <form action="{{ BASE_URL }}/gebruikers/delete" method="post" enctype="multipart/form-data">
        <div class="modal fade" id="confirm-delete" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Opgelet!</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Ben je zeker dat je de gebruiker wilt verwijderen?</p>
                    </div>
                    <div class="modal-footer">
                        <button id="VerwijderUser" name="VerwijderUser" value="" type="submit"
                                class="btn btn-success">Verwijder
                        </button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuleer</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Modal Dialog: Undelete User -->
    <form action="{{ BASE_URL }}/gebruikers/undelete" method="post" enctype="multipart/form-data">
        <div class="modal fade" id="confirm-undelete" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Opgelet!</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Ben je zeker dat je de gebruiker terug actief wilt maken??</p>
                    </div>
                    <div class="modal-footer">
                        <button id="TerugzettenUser" name="TerugzettenUser" value="" type="submit"
                                class="btn btn-success">Actief zetten
                        </button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuleer</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}